{
  "name": "highlander",
  "version": "1.0.0",
  "description": "Micro service to handle highlander",
  "repository": "https://erzo.wtf",
  "license": "MIT",
  "scripts": {
    "build": "node ./util/build.js",
    "build-doc": "jsdoc2md --files ./src/*.ts ./src/**/*.ts --configure ./jsdoc2md.json > ./docs/doc.md",
    "lint": "tslint --project \"tsconfig.json\"",
    "start": "npm run build && node -r module-alias/register ./dist/start.js",
    "start-dev": "nodemon --config \"./util/nodemon.json\"",
    "test": "cross-env ENV_FILE=test ts-node -r ./env -r tsconfig-paths/register ./spec/start.ts",
    "testgit": "ts-node -r tsconfig-paths/register ./spec/start.ts",
    "sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner",
    "changelog-init": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "changelog": "conventional-changelog -i CHANGELOG.md -s",
    "changelog-git": "npm run changelog && git add CHANGELOG.md && git commit -m 'docs(changelog): updated' && git push origin master"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "precise-commit",
      "pre-push": "git-branch-is -r '^((?!master).)*$' || (git-branch-is master && npm run build-doc)"
    }
  },
  "hooks": {
    "pre-commit": [
      {
        "message": "You’ve got leftover conflict markers",
        "regex": "/^[<>|=]{4,}/m"
      },
      {
        "filter": "\\.js$",
        "message": "You’ve got leftover `console.log`",
        "regex": "console\\.log"
      },
      {
        "message": "You have unfinished devs",
        "nonBlocking": "true",
        "regex": "(?:FIXME|TODO)"
      }
    ]
  },
  "_moduleAliases": {
    "@daos": "dist/daos",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/Server"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-decorators": "7.8.3",
    "@types/bluebird": "3.5.29",
    "@types/compression": "0.0.35",
    "@types/cors": "2.8.6",
    "@types/express-session": "1.15.16",
    "@types/helmet": "0.0.37",
    "@types/inversify": "2.0.33",
    "@types/lodash": "4.14.149",
    "@types/request": "2.48.4",
    "@types/uuid": "3.4.7",
    "@types/validator": "12.0.1",
    "changelog": "1.4.2",
    "compression": "1.7.4",
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "cross-env": "7.0.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-session": "1.17.0",
    "form-data": "3.0.0",
    "git-branch-is": "^3.1.0",
    "global": "4.4.0",
    "helmet": "3.21.2",
    "http-status-codes": "1.4.0",
    "inversify": "4.13.0",
    "inversify-express-utils": "4.2.2",
    "jasmine-node": "3.0.0",
    "jsdoc": "3.6.3",
    "kaop": "4.4.2",
    "kaop-ts": "4.3.0",
    "log4js": "6.1.2",
    "module-alias": "2.2.2",
    "morgan": "1.9.1",
    "pg": "7.18.1",
    "reflect-metadata": "0.1.13",
    "request": "2.88.0",
    "sequelize": "5.21.4",
    "sequelize-history": "1.4.0",
    "sequelize-typescript": "1.1.0",
    "swagger-express-ts": "1.0.1",
    "swagger-ui-dist": "3.25.0",
    "typescript-rest": "2.2.4",
    "uuid": "3.4.0",
    "uuidv4": "6.0.2",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/find": "^0.2.1",
    "@types/jasmine": "^3.5.0",
    "@types/jsonfile": "^5.0.0",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.1.8",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.1",
    "find": "^0.3.0",
    "fs-extra": "^8.1.0",
    "husky": "^4.0.10",
    "jasmine": "^3.5.0",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^5.0.3",
    "jsonfile": "^5.0.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.7.5"
  }
}
